def lista_de_compras():
    itens = input("maçã,banana,tomate: ")
    lista = itens.split(',')

    for i, item in enumerate(lista, start=1):
        print(f"Item {i}: {item.strip()}")

# Exemplo de uso
lista_de_compras()

maçã,banana,tomate


